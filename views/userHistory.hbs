<div class="container" style="padding-top:60px">
    <div class="row">
        <div class="col-12">
            <h1>{{session.user.userName}} ({{session.user.email}}) History</h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Login Date/Time</th>
                        <th>Client Information</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each session.user.loginHistory}}
                    <tr>
                        <td>{{dateTime}}</td>
                        <td>{{userAgent}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

